{
  "name": "ry-pug",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all clean -p serve watch",
    "lint": "eslint src",
    "lint:css": "stylelint src/**/*.css",
    "typecheck": "flow",
    "build:js": "cross-env NODE_ENV=production webpack",
    "build:css": "postcss src/css/main.css -o public/css/main.css -m",
    "build:static": "cpx 'src/**/*.{png,jpg}' public",
    "build:html": "cross-env NODE_ENV=production ./html-compile.js",
    "build": "npm-run-all clean -p build:*",
    "watch:js": "webpack -w",
    "watch:css": "postcss src/css/main.css -o public/css/main.css -m -w",
    "watch:static": "cpx 'src/**/*.{png,jpg}' public --watch",
    "watch:html": "cross-env NODE_ENV=development ./html-compile.js",
    "watch": "npm-run-all -p watch:*",
    "serve": "serve public -p 9000 -c 0 -o",
    "clean": "rimraf public && mkdirp public/css public/js public/img",
    "deploy": "yarn run build && node ./deploy.js",
    "deploy:css": "yarn run build:css && cpx 'public/css/main.css' deploy/css",
    "deploy:js": "yarn run build:js && cpx 'public/js/*.js' deploy/js",
    "test:ci": "npm-run-all typecheck lint lint:css"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.16.0",
    "chokidar": "^1.6.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.13.1",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.43.1",
    "flowtype": "^2.0.0",
    "fs-extra": "^2.0.0",
    "mkdirp": "^0.5.1",
    "npm-check-updates": "^2.10.5",
    "npm-run-all": "^4.0.2",
    "postcss": "^5.2.9",
    "postcss-advanced-variables": "^1.2.2",
    "postcss-apply": "^0.6.1",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^3.1.1",
    "postcss-color-function": "^3.0.0",
    "postcss-comment": "^1.0.3",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^9.1.0",
    "postcss-mixins": "^5.4.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "postcss-sorting": "^2.0.1",
    "pug": "^2.0.0-rc.2",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.4.0",
    "rimraf": "^2.6.1",
    "serve": "^6.0.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^2.3.3"
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "js-cookie": "^2.1.3",
    "mobx": "^3.1.16",
    "mobx-react": "^4.2.2",
    "mobx-react-devtools": "^4.2.15",
    "normalize.css": "^6.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
